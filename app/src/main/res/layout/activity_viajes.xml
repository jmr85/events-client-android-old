<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.recitales.app.ViajesActivity">

    <TextView
        android:id="@+id/t_viajes_programados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:text="Viajes Programados"
        android:textSize="30sp"
        />

    <TextView
        android:id="@+id/t_hacer_click"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t_viajes_programados"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="15dp"
        android:text="Presionar sobre el evento para desuscribirse del mismo."
        android:textColor="#F61515"
        android:textSize="15sp" />

    <ListView
        android:id="@+id/list_viajes_programados"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/t_hacer_click"
        >

    </ListView>


</RelativeLayout>

